<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dragonchang.mapper.CompanyMapper">
    <resultMap id="BaseResultMap" type="com.dragonchang.domain.po.Company">
        <id column="id" property="id"/>
        <result column="tyc_id" property="tycId"/>
        <result column="company_name" property="companyName"/>
        <result column="stock_code" property="stockCode"/>
        <result column="deleted" property="deleted"/>
        <result column="created_time" property="createdTime"/>
        <result column="created_by" property="createdBy"/>
    </resultMap>

    <select id="findPage" resultMap="BaseResultMap">
        select * from t_company
        where deleted=0
        <if test="request.tycId != null and request.tycId != ''">
            and tyc_id like CONCAT('%', #{request.tycId} , '%')
        </if>
        <if test="request.companyName != null and request.companyName != ''">
            and company_name like CONCAT('%', #{request.companyName} , '%')
        </if>
        <if test="request.stockCode != null and request.stockCode != ''">
            and stock_code like CONCAT('%', #{request.stockCode} , '%')
        </if>
    </select>
</mapper>